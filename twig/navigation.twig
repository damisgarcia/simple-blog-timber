<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <a class="navbar-brand" href="{{site.link}}">{{ site.title }}</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
      aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <div class="mr-auto"></div>
      <ul class="navbar-nav">
        {% for item in menu.items %}
          <li class="nav-item {{ item.classes|join(' ') }} {{ item.children ? 'dropdown' : '' }}">
            {% if item.children %}
              <a class="nav-link dropdown-toggle" href="{{ item.link }}" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">{{ item.title }}</a>
              <div class="dropdown-menu" id="submenu-{{item.id}}">
                {% for child in item.children %}
                <a class="dropdown-item" href="{{ child.link }}">{{ child.title }}</a>
                {% endfor %}
              </div>
              {% else %}
                <a class="nav-link" href="{{ item.link }}">{{ item.title }}</a>              
            {% endif %}
          </li>
        {% endfor %}
      </ul>    
    </div>
  </div>
</nav>
