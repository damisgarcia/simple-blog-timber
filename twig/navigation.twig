<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <a class="navbar-brand" href="{{site.link}}">{{ site.title }}</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
      aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        {% for item in menu.items %}
          <li class="nav-item {{ item.classes|join(' ') }}">
            <a class="nav-link" href="{{ item.link }}">{{ item.title }}</a>
            {% if item.children %}
            <div class="dropdown-menu" id="submenu-{{item.id}}"  data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              {% for child in item.children %}
                <a class="dropdown-item" href="{{ child.link }}">{{ child.title }}</a>
              {% endfor %}
            </div>                  
            {% endif %}
          </li>
        {% endfor %}
      </ul>    
    </div>
  </div>
</nav>
