<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        {% if post.get_field('slide1') %}
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        {% endif %}
        {% if post.get_field('slide2') %}
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        {% endif %}
        {% if post.get_field('slide3') %}
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        {% endif %}
    </ol>
    <div class="carousel-inner">
        {% if post.get_field('slide1') %}
            <div class="carousel-item active">
                {% if post.get_field('slide1_redirect') %}
                    <a href="{{ post.get_field('slide1_redirect') }}" target="_blank">
                        <img src='{{ post.get_field('slide1') }}' class='d-block w-100'/>
                    </a>
                {% else %}
                    <img src='{{ post.get_field('slide1') }}' class='d-block w-100'/>
                {% endif %}
            </div>
        {% endif %}
        {% if post.get_field('slide2') %}
            <div class="carousel-item">
                {% if post.get_field('slide2_redirect') %}
                    <a href="{{ post.get_field('slide2_redirect') }}" target="_blank">
                        <img src='{{ post.get_field('slide2') }}' class='d-block w-100'/>
                    </a>
                {% else %}
                    <img src='{{ post.get_field('slide2') }}' class='d-block w-100'/>
                {% endif %}
            </div>
        {% endif %}
        {% if post.get_field('slide3') %}
            <div class="carousel-item">
                {% if post.get_field('slide3_redirect') %}
                    <a href="{{ post.get_field('slide3_redirect') }}" target="_blank">
                        <img src='{{ post.get_field('slide3') }}' class='d-block w-100'/>
                    </a>
                {% else %}
                    <img src='{{ post.get_field('slide3') }}' class='d-block w-100'/>
                {% endif %}
            </div>
        {% endif %}
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>